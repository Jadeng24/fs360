<!DOCTYPE html>
<!--[if IE 9]><html class="ie ie9"> <![endif]-->
<html>
<head>
    {{>head}}
</head>

<body>
    <!--[if lte IE 8]>
        <p class="chromeframe">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade your browser</a>.</p>
    <![endif]-->
    <div class="layer"></div>
    <div id="preloader">
        <div data-loader="circle-side"></div>
    </div>
    {{>nav}}

    <section class="parallax-window" id="short" data-parallax="scroll" data-image-src="/img/joe_light_blue.png" data-natural-width="1400" data-natural-height="350">
        <div id="subheader">
            <h1>Tutorials</h1>
        </div>
    </section>

    <div id="tutorials" class="container margin_60_35" style="padding-top:64px">

        <div class="row">
            <div class="col-md-3" id="sidebar">
                <div class="theiaStickySidebar">
                    <div id="faq_box">
                        <ul id="cat_nav">
                            <li><a onClick="selectCategory(event, 'all')" href="#" class="active">All</a></li>
                            <li><a onClick="selectCategory(event, 'fullstack')" href="#">Fullstack</a></li>
                            <li><a onClick="selectCategory(event, 'node')" href="#">Node</a></li>
                            <li><a onClick="selectCategory(event, 'react')" href="#">React</a></li>
                            <li>{{>slack}}</li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="col-md-9">
                <h3 id="selected" class="nomargin_top">ALL</h3>
                <hr />
                <div class="panel-group" id="courses">
                    <div class="row">
                        <div class="col-md-9">

                            {{#tutorials}}
                            <div class="review_strip_single" id="{{category}}">
                                <img alt="Pic" class="img-circle" src='https://media-service.appspot.com/site/images/{{image}}?crop=68' />
                                <small> - {{numUnits}} -</small>
                                <h4><a href="/tutorial/{{slug}}">{{title}}</a></h4>
                                <p>{{preview}}</p>
                                <div style="text-align:right">
                                    <a href="/tutorial/{{slug}}" style="height:36px;border-radius:18px;margin-top:12px;padding-top:9px" class="btn_1 white">View</a>
                                </div>
                            </div>
                            {{/tutorials}}

                        </div>
                    </div>
                </div>

                <h3 class="nomargin_top">Subscribe</h3>
                <hr />
                <div class="panel-group" id="subscribe">
                    <div class="row">
                        {{>premiummembership}}
                        {{>basicmembership}}
                    </div>
                </div>

                    
            </div>
        </div>
    </div>  
  
    {{>footer}}
    {{>javascripts}}
</body>
</html>